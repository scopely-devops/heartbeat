import logging

import click

from heartbeat import HeartBeat

FmtString = '%(asctime)s - %(name)s - %(levelname)s - %(message)s'


def set_debug_logger(logger_name='heartbeat', stream=None):
    """
    Convenience function to quickly configure full debug output
    to go to the console.
    """
    log = logging.getLogger(logger_name)
    log.setLevel(logging.DEBUG)

    ch = logging.StreamHandler(stream)
    ch.setLevel(logging.DEBUG)

    # create formatter
    formatter = logging.Formatter(FmtString)

    # add formatter to ch
    ch.setFormatter(formatter)

    # add ch to logger
    log.addHandler(ch)


@click.command()
@click.option(
    '--tagname',
    help="The name of the tag to use for the custom metric name",
    envvar='HEARTBEAT_TAGNAME',
    default='Name'
)
@click.option(
    '--apikey',
    help="The StackDriver API Key",
    envvar='HEARTBEAT_APIKEY'
)
@click.option(
    '--debug/--no-debug',
    default=False,
    help='Turn on debugging output'
)
def main(tagname=None, apikey=None, debug=False):
    if debug:
        set_debug_logger()
    heartbeat = HeartBeat(tagname, apikey)
    heartbeat.ping()


if __name__ == '__main__':
    main()
